---
const { asteroid } = Astro.props;
const { id, name, diameter, discovery_date, observations, distances } = asteroid;
---

<div class="asteroid-box" onclick="this.classList.toggle('expanded')">
  <div class="header">
    <div class="section">
      <p><strong>ID:</strong> {id}</p>
    </div>
    <div class="vertical-divider"></div>
    <div class="section">
      <p><strong>Name:</strong> {name}</p>
    </div>
  </div>
  <div class="horizontal-divider"></div>
  <div class="details">
    <p><strong>Diameter:</strong> {diameter} km</p>
    <p><strong>Discovery Date:</strong> {discovery_date}</p>
    <p><strong>Observations:</strong> {observations}</p>
    {distances.length > 0 && (
      <div>
        <strong>Distances:</strong>
        <ul>
          {distances.map((distance, index) => (
            <li key={index}>{distance.date}: {distance.distance} AU</li>
          ))}
        </ul>
      </div>
    )}
  </div>
</div>

<style>
  .asteroid-box {
    background: linear-gradient(#051633, #051633) padding-box,
      linear-gradient(to right, rgba(27, 212, 237, 0.7), rgb(23, 56, 114)) border-box;
    padding: 15px;
    border-radius: 15px;
    border: 3px solid transparent;
    font-size: 18px;
    transition: all 0.1s ease-out;
    margin-bottom: 10px;
    color: white;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .header {
    display: flex;
    width: 100%;
    max-width: 600px;
    align-items: center;
  }

  .section {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .vertical-divider {
    width: 3px;
    height: 100%;
    background: linear-gradient(#051633, #051633) padding-box,
      linear-gradient(to right, rgba(27, 212, 237, 0.7), rgb(23, 56, 114)) border-box;
    border-left: 3px solid transparent;
    border-right: 3px solid transparent;
  }

  .horizontal-divider {
    width: 100%;
    height: 3px;
    background: linear-gradient(#051633, #051633) padding-box,
      linear-gradient(to right, rgba(27, 212, 237, 0.7), rgb(23, 56, 114)) border-box;
    border-top: 3px solid transparent;
    border-bottom: 3px solid transparent;
    margin: 10px 0;
  }

  .details {
    display: none;
    text-align: left;
    width: 100%;
    max-width: 600px;
  }

  .asteroid-box.expanded .details {
    display: block;
  }

  .details p, .details ul {
    margin: 5px 0;
  }

  .details ul {
    list-style: none;
    padding-left: 10px;
  }

  .asteroid-box:hover {
    box-shadow: 0 0 25px rgba(27, 212, 237, 0.7);
  }

  @media (max-width: 600px) {
    .asteroid-box {
      margin-left: 0;
      transform: translateX(0);
    }

    .header {
      flex-direction: column;
      align-items: flex-start;
    }

    .vertical-divider {
      display: none;
    }
  }
</style>

