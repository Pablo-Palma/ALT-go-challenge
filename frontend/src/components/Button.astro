---
const { content, href, onClick, size } = Astro.props;
---

<a href={href} class={`button ${size}`} onClick={onClick}>
  {content}
</a>

<style>
  .button {
    background: linear-gradient(#051633, #051633) padding-box,
    linear-gradient(to right, rgba(27, 212, 237, 0.7), rgb(23, 56, 114)) border-box;
    padding: 10px 20px;
    border-radius: 50em;
    border: 3px solid transparent;
    font-size: 24px;
    transition: all 0.1s ease-out;
    display: inline-block;
    text-align: center;
    color: white;
    text-decoration: none;
    font-family: inherit;
  }

  .button.small {
    padding: 5px 10px;
    font-size: 16px;
  }

  .button:hover {
    box-shadow: 0 0 25px rgba(27, 212, 237, 0.7);
  }

  @media (max-width: 600px) {
    .button {
      margin-left: 200%;
      transform: translateX(-50%);
    }
  }
</style>

